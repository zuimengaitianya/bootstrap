@model TelnetMVC.Entities.OrgDict

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_BootStrapLayout.cshtml";
}

@using (Html.BeginForm("Create","OrgDict",FormMethod.Post,new { Id="NewOrgForm", Class = "form-horizontal center" }))
{
    <div class="form-group">
        <h2><label class="col-md-12" style="font-size:24px;text-align:center;">新增机构</label></h2>
    </div>
    <div class="form-group">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <hr />
    <div class="form-group">
        <label class="col-md-2 control-label" style="text-align:right;">机构名称</label>
        <div class="col-md-2">
            <input type="text" id="OrgName" name="OrgName" class="form-control" />
        </div>
        <label class="col-md-2 control-label" style="text-align:right;">机构全称</label>
        <div class="col-md-2">
            <input type="text" id="OrgAllName" name="OrgAllName" class="form-control" />
        </div>
        <label class="col-md-2 control-label" style="text-align:right;">机构英文名称</label>
        <div class="col-md-2">
            <input type="text" id="OrgEnglishName" name="OrgEnglishName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" style="text-align:right;">机构名称</label>
        <div class="col-md-2">
            <input type="text" id="UpOrgId" name="UpOrgId" class="form-control" />
        </div>
        <div class="col-md-8">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">&nbsp;</div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-9"></div>
        <div class="col-md-3"><button type="button" class="btn btn-success" onclick="createOrgDict()">提交</button></div>
    </div>
}
<script type="text/javascript">
    $().ready(function () {
        //myTips("提交成功！", "success");
    })
    function createOrgDict()
    {
        $.ajax({
            type: "post",
            url: "/OrgDict/Create",
            //data: { 'dataItem': encodeURI(JSON.stringify($("#NewOrgForm").serializeArray())) },
            data:$("#NewOrgForm").serializeArray(),
            dataType: "json",
            error: function (ee) {
            },
            success: function (result) {
                if (result == "Error") {
                }
                else {
                    myTips("提交成功！", "success");
                    var temp = setTimeout(function () {
                        location.href = "/OrgDict/Index";
                    }, 2000);
                }
            }
        });
    }
</script>
